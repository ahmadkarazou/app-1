@using WebMatrix.Data
@{
    var nume = "";
    var mobile = "";
    var address = "";

    if (IsPost)
    {
        nume = Request.Form["Nume"];
        mobile = Request.Form["Mobile"];
        address = Request.Form["Address"];

        var db = Database.Open("steudens");
        var inCommand = "INSERT INTO [dbo].[insert]([Nume],[Mobile],[Address])VALUES(@0,@1,@2)";

        db.Execute(inCommand, nume, mobile, address);
        Response.Redirect("~/WebPage2");
    }

}
<html>
<body>
    <h1>Insert page </h1>
    @Html.ValidationSummary()
    <form method="post">
        <fieldset>
            <legend>Data Information</legend>
            <p>
                <label for="Name">Name</label>
                <input type="text" name="Nume" value="@Request.Form["nume"]" />
            </p>
            <p>
                <label for="Mobile">Mobile</label>
                <input type="text" name="Mobile" value="@Request.Form["mobile"]" />
            </p>
            <p>
                <label for="Address">Address</label>
                <input type="text" name="Address" value="@Request.Form["address"]" />
            </p>
            <p>
                <input type="submit" name="buttonSubmit" value="Add Data" />
                <button type="button" formmethod="get">Delete</button>
            </p>
        </fieldset>
    </form>
  
</body>
</html>